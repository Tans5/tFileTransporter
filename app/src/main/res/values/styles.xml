<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainTabLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tabTextColor">@color/black_2</item>
        <item name="tabSelectedTextColor">?colorPrimary</item>
        <item name="tabIndicatorColor">?colorPrimary</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabMode">scrollable</item>
        <item name="tabIndicatorGravity">bottom</item>
        <item name="tabBackground">@android:color/transparent</item>
        <item name="tabRippleColor">@null</item>
        <item name="tabPaddingStart">16dp</item>
        <item name="tabPaddingEnd">16dp</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:background">@color/white</item>
    </style>

</resources>